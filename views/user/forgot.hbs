 <div class="row">
        <div class="col-md-3 col-lg-3 col-xs-3"></div>
        <div class="col-md-6 col-lg-6 col-xs-6">
            <form action="/forgot" autocomplete="off" method="post">
            <div class="row">
                <div class="col-md-8 col-lg-8 col-xs-8">
                    <p class="heading">
                        Forgot Password
                    </p>
                            <div class="row">
                                <div class="col-md-12 col-lg-12 col-xs-12">
                                    <br><br>
                                        <div class="box">
                                                <input type="email" name="email" required>
                                                <label for="email">Enter Email</label>
                                                <p>You can use Letters, Numbers &amp; periods <br><br></p>
                                        </div>
                                </div>
                            </div>
                                <div class="row">
                                        <div class="col-lg-12 col-md-12 col-xs-12">
                                            <div class="final">
                                                <a href="/signin" class="link">Sign in with your account</a>
                                                <button type="submit" class="btn"><i class="fa fa-envelope" aria-hidden="true"></i> Send Email</button>
                                            </div>
                                        </div>
                                </div>

                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                            <div class="google">
                                                    <br>
                                                    <p>OR</p><br>
                                                    <a href="/google" class="btn btn-primary pull-left"><i class="fa fa-google-plus" aria-hidden="true"></i> Login With Google</a>
                                            </div>
                                    </div>
                                </div>
                </div>
                <div class="col-md-4 col-lg-4 col-xs-4">
                    <div class="sideImg">
                            <img src="images/secure.jpg" alt="">
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
    <script>
    function change(){
        var img = document.getElementById('show')
        var password = document.getElementById('password')
        if(password.type==='password'){
            img.src="images/show.jpg"
            password.type="text"
            console.log('show')
        }else{
            img.src="images/hidden.png"
            password.type="password"
            console.log('hidden')
        }
    }
    </script>